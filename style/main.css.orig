body {
    font-family: Arial, sans-serif;
    background-color: #f2f4f8; 
    margin: 0;
    padding: 30px;
}

h1 {
    color: #e07a5f;
    text-align: center;
    margin-bottom: 40px;
}

#register-message {
    color:rgb(228, 47, 67);
}

#login-message {
    color:rgb(228, 47, 67);
}

.form-container {
    display: flex;
    justify-content: center;
    gap: 60px;
    flex-wrap: wrap;
    margin-top: 20px;
}

form {
    background-color: #ffffff;
    padding: 30px;
    border-radius: 15px;
    width: 300px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    align-items: center;
}

form h2 {
    margin-bottom: 20px;
    color: #333333;

}

input {
    width: 100%;
    padding: 12px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 14px;
}

button {
    width: 100%;
    padding: 12px;
    background-color: #e07a5f; 
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #d1603d;

}

.dashboard {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: -30px;
}


#logout-btn {
    margin-top: 20px;
    padding: 10px 24px;
    background-color: #84a59d;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    width: auto; 
    min-width: 120px; 
    text-align: center;
}


#logout-btn:hover {
     background-color: #6c8c83;
 }


.navbar {
    background-color: #e07a5f;
    padding: 10px 20px;
}

    .navbar ul {
        display: flex;
        justify-content: center;
        list-style: none;
        margin: 0;
        padding: 0;
        flex-wrap: wrap;
        gap: 15px;
    }

    .navbar a {
        color: white;
        text-decoration: none;
        font-weight: bold;
        padding: 8px 12px;
        transition: background-color 0.3s ease;
        border-radius: 5px;
    }

        .navbar a:hover {
            background-color: #ba5a47;
        }

    .navbar button {
        background-color: #84a59d;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

 .navbar button:hover {
    background-color: #6c8c83;
 }

.menu {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
}

.left-menu,
.right-menu {
    display: flex;
    gap: 15px;
}

.dashboard h1 {
    font-size: 32px; 
    text-align: center;
    color: #e07a5f;
    margin-top: 100px;
}

form {
    margin-top: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    max-width: 300px;
    margin-inline: auto;
}

    form input, form button {
        padding: 10px;
        font-size: 14px;
        border-radius: 8px;
        border: 1px solid #ccc;
    }

    form button {
        background-color: #84a59d;
        color: white;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        form button:hover {
            background-color: #6c8c83;
        }

#station-list {
    margin-top: 20px;
    list-style: none;
    padding: 0;
    text-align: center;
}

    #station-list li {
        padding: 6px 0;
    }


.station-buttons {
    margin-top: 10px;
    display: flex;
    justify-content: center;
    gap: 10px;
}

    .station-buttons button {
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 14px;
    }

body.dark-mode {
    background-color: rgb(30, 30, 30);
    color: rgb(240, 240, 240);
}

body.dark-mode .navbar {
    background-color: rgb(51, 51, 51);
}

body.dark-mode .navbar a {
    color: rgb(240, 240, 240);
}

body.dark-mode .navbar a:hover {
    background-color: rgb(85, 85, 85);
}

body.dark-mode .navbar button {
    background-color: rgb(85, 85, 85);
}

body.dark-mode .navbar button:hover {
    background-color: rgb(119, 119, 119);
}

body.dark-mode form {
    background-color: rgb(44, 44, 44);
    color: rgb(240, 240, 240);
}

body.dark-mode input,
body.dark-mode button {
    background-color: rgb(68, 68, 68);
    color: rgb(240, 240, 240);
}



